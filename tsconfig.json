{
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "./test/**/*"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "baseUrl": "./src",
        "outDir": "./dist",

        "paths": {
            "@/*": ["./*"],
        }
    },
}
